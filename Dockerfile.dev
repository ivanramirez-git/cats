# Dockerfile para desarrollo del Frontend

FROM node:20-alpine

WORKDIR /app

# Copiar archivos de configuraci√≥n
COPY package*.json ./
COPY angular.json ./
COPY tsconfig*.json ./

# Instalar dependencias
RUN npm install

# Exponer puerto para desarrollo
EXPOSE 4200

# Comando por defecto
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--port", "4200"]